<%= content_for :full_box do %>flag<% end %>

<%= simple_form_for @room do |f| %>
    <div class="box box-danger">
      <div class="box-header with-border">
        <h3 class="box-title">
          Dados do <%=t @room.class.model_name.human %>
          <%= link_to 'Cancelar', eval_with_rescue("#{controller_name}_path"), class: "btn btn-default btn-xs" %>
          <%= f.submit 'Salvar', class: 'btn btn-primary btn-xs' %>
        </h3>
      </div>
      <div class="box-body">
        <div class="row">
          <div class="col-md-12">
            <%= f.label :number %>
            <%= f.select :number, [*1...16], {include_blank: false} , { class: 'chosen-select' } %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-12">
            <%= f.label :floor %>
            <%= f.select :floor, [['TÃ©rreo', 'Piso superior'], @room.floor], {include_blank: false} , { class: 'chosen-select' } %>
          </div>
        </div>
      </div>
      <div class="box-footer">
        <%= link_to 'Cancelar', eval_with_rescue("#{controller_name}_path"), class: "btn btn-default" %>
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
<% end %>
