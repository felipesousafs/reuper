<%= content_for :full_box do %>flag<% end %>

<div class="box box-danger">
  <div class="box-header with-border">
    <h3 class="box-title">Edit <%= resource_name.to_s.humanize %></h3>
  </div>
  <div class="box-body">

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-md-12">
        <%= f.input :email, required: true, autofocus: true %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= f.input :name, required: true, autofocus: true, input_html: { minlength: 10 } %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= f.input :reg_number, required: true, autofocus: true, input_html: { minlength: 8 } %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= f.association :room, label_method: :room ,collection: Room.all, input_html: { class:'chosen-select' }%>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= f.association :course, label_method: :name, collection: Course.all, input_html: { class:'chosen-select' }%>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= f.input :password_confirmation, required: false %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
  </div>
</div>