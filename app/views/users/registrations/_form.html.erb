<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="row">
        <div class="col-md-12">
      <%= f.input :email, required: true, autofocus: true %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= f.input :name, required: true, autofocus: true, input_html: { minlength: 10 } %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= f.input :reg_number, required: true, autofocus: true, input_html: { minlength: 8 } %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= f.association :room, collection: Room.all.map{|r| [r.room, r.room, { disabled: r.users.size > 3 }]}, input_html: { class:'chosen-select' }%>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= f.association :course, label_method: :name, collection: Course.all, input_html: { class:'chosen-select' }%>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= f.input :password_confirmation, required: true %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Salvar" %>
      <%= render "devise/shared/links" %>
    </div>

<% end %>

