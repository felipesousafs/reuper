<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"><i class="fa fa-fw fa-eye"></i> Detalhes da notificação</h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body no-padding">
    <div class="mailbox-read-info">
      <h3><strong><%= @notification.subject %></strong></h3>
      <h5><strong>From:</strong> <%= @notification.sender.name %> (<%= @notification.sender.email %>)
        <span class="mailbox-read-time pull-right">15 Feb. 2016 11:03 PM</span></h5>
    </div>
    <!-- /.mailbox-read-info -->
    <div class="mailbox-controls with-border text-center">

    </div>
    <!-- /.mailbox-controls -->
    <div class="mailbox-read-message">
      <p><%= @notification.description %></p>
      <br>
    </div>
    <!-- /.mailbox-read-message -->
  </div>
  <!-- /.box-body -->
  <div class="box-footer">
    <%= link_to notifications_response_path(id: @notification.id, resp: true), data: {confirm: 'Tem certeza?'}, class: 'btn btn-success', method: 'post' do %>
        <i class="fa fa-trash-o"></i> Aceitar troca
    <% end %>
    <button type="button" class="btn btn-default"><i class="fa fa-print"></i> Print</button>
  </div>
  <!-- /.box-footer -->
</div>
<!-- /. box -->