<%= content_for :full_box do %>flag
<% end %>
<div class="box box-primary">
  <div class="box-header with-border">
    <h5 class="box-title">
      Datas onde não haverá tarefa em uma ou mais tabelas específicas
    </h5>
  </div>
  <div class="box-body">
    <div class="row">
      <div class="col-md-12">
        <table id="datatable" class="table table-striped table-bordered datatables2">
          <thead>
          <tr>
            <th>Data</th>
            <th>Aplica-se às tabelas</th>
            <th>Adicionado em</th>
            <th>Última alteração</th>
            <th><%= t '.actions', :default => t("helpers.actions") %></th>
          </tr>
          </thead>
          <tbody>
          <% @calendars.each do |calendar| %>
              <% if calendar.is_holiday %>
                  <tr>
                    <td><%= link_to l(calendar.date), calendar_path(calendar) %></td>
                    <td>
                      <% calendar.tables.each_with_index do |k, i| %>
                            <%= k %><br>
                      <% end %>
                    </td>
                    <td><%= l(calendar.created_at, format: :short) %></td>
                    <td><%= l(calendar.updated_at, format: :short) %></td>
                    <td>
                      <%= link_to calendar, :class => 'btn btn-primary btn-xs', data: {toggle: 'tooltip', placement: 'top', title: 'Ver perfil completo'} do %>
                          <i class="fa fa-eye fa-fw"></i>
                      <% end %>
                      <% if current_user %>
                          <% if current_user.has_role? :admin %>
                              <%= link_to edit_calendar_path(calendar), :class => 'btn btn-warning btn-xs', data: {toggle: 'tooltip', placement: 'top', title: 'Editar feriado'} do %>
                                  <i class="fa fa-pencil fa-fw"></i>
                              <% end %>
                              <%= link_to calendar, method: :delete, :class => 'btn btn-danger btn-xs', data: {confirm: 'Tem certeza?', toggle: 'tooltip', placement: 'top', title: 'Remover feriado'} do %>
                                  <i class="fa fa-trash fa-fw"></i>
                              <% end %>
                          <% end %>
                      <% end %>
                    </td>
                  </tr>
              <% end %>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <% if current_user %>
      <% if current_user.has_role? :admin %>
          <div class="box-footer">
            <div class="col-xs-12 col-md-2">
              <%= link_to 'Registrar uma data', new_calendar_path(is_holiday: true), class: 'btn btn-flat btn-primary col-xs-12 col-md-12' %>
            </div>
            &nbsp
            <div class="col-xs-12 col-md-2">
              <%= link_to 'Alterar período letivo', new_calendar_path(is_holiday: false), class: 'btn btn-flat btn-info col-xs-12 col-md-12' %>
            </div>
          </div>
      <% end %>
  <% end %>
</div>


