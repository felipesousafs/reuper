<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-bordered datatables2">
      <thead>
      <tr>
        <th>Data</th>
        <th>Aplica-se às tabelas</th>
        <th>Adicionado em</th>
        <th>Última alteração em</th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td>
          <%= @calendar.is_holiday ? l(@calendar.date) : ("Período letivo: " + l(@calendar.inicio_semestre).to_s + " - " + l(@calendar.fim_semestre).to_s) %>
        </td>
        <td>
          <% @calendar.tables.each_with_index do |k, i| %>
              <%= k %><br>
          <% end %>
        </td>
        <td>
          <%= l(@calendar.created_at, format: :short) %>
        </td>
        <td>
          <%= l(@calendar.updated_at, format: :short) %>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
